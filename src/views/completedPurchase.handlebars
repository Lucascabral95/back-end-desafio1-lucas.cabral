<div>

    {{> headerPrueba}}

    <div class="sub-header">
        <div class="uid">
            <p class="uid-texto"> UID: {{data.uid}} </p>
        </div>
        <div class="carrito-compras">
            <a href="/carts/{{data.cart}}/purchase" class="carrito-compras-a">Ir al carrito de compras ðŸ›’ </a>
        </div>
        <div class="photo">
            {{#if data.referenceLength }}
            <a class="photo-a" href="/api/users/documents">
                <span class="photo-texto"> {{data.email}} </span>
                <img class="photo-profile" src="{{data.ultimoValor}}" alt="Foto de perfil">
            </a>
            {{else}}
            <a class="photo-a" href="api/users/documents">
                <span class="photo-texto"> {{data.email}} </span>
                <img class="photo-profile" src="/img/foto-anonima.jpg" alt="Foto de perfil">
            </a>
            {{/if}}
        </div>
    </div>

    <div class="container">

        <h2 class="titlee text-center"> Historial de compras </h2>
            
        <div class="col-12">
            <h2
                style="color: blue; font-weight: bolder; text-align: center; font-size: 2rem; margin-top: 7%; margin-bottom: 2%">
                Todos los Tickets generados por este Carrito ({{mock.total}} en total) </h2>

            <table style="margin-top: 3.5%;" class="table table-striped col-12">
                <thead>
                    <tr>
                        <th>_id del Ticket generado</th>
                        <th>Code</th>
                        <th>Purchase datatime</th>
                        <th>Amount</th>
                        <th>Email del comprador</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each mock._id as |ticketId index|}}
                    <tr>
                        <td scope="col">{{ticketId}}</td>
                        <td scope="col">{{lookup ../mock.code index}}</td>
                        <td scope="col">{{lookup ../mock.purchase_dateTime index}}</td>
                        <td scope="col">{{lookup ../mock.amount index}}</td>
                        <td scope="col">{{lookup ../mock.purchaser index}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <h3 class="text-center" style="font-size: 2.2rem; font-weigth: 600; margin: 4%"> Ticket de su Ãºltima compra
            </h3>

            <div style="display:flex; justify-content:center">
                <div class="card border-info mb-3" style="max-width: 18rem;">
                    <div class="card-header" style="font-weight: 700;">Ticket</div>
                    <div class="card-body">
                        <h5 class="card-title">Ultimo ticket de compra</h5>
                        <p class="card-text"> _id: {{last.ultimoIddd}} </p>
                        <p class="card-text"> Code: {{last.ultimoCode}} </p>
                        <p class="card-text"> Purchase datatime: {{last.ultimoDatatimee}} </p>
                        <p class="card-text"> Amount: {{last.ultimoAmount}} </p>
                        <p class="card-text"> Email del comprador: {{last.ultimoPurr}} </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

{{> footerPrueba}}

