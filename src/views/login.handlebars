<section class="login-login">
    
    <div class="container">
        <div class="row">

            <h2 class="col-12 text-center" style="margin-top: 5%; margin-bottom: 5%; color: blue; font-size: 3rem ">
                Login</h2>

            <div class="formulario-register col-12">
                <form action="/api/session/login" role="form" method="post" class="col-6 offset-3" required>
                    <input class="form-control m-4" type="email" id="email" name="email"
                        placeholder="Ingrese su email..." required>
                    <input class="form-control m-4" type="password" id="password" name="password"
                        placeholder="Ingrese su contraseña..." required>
                    <div style="display:flex; justify-content:center; align-items:center">
                        <button class="btn btn-info" type="submit">Ingresar</button>
                    </div>
                </form>
            </div>

            <div class="login-register col-12 text-center mt-4">
                <a href="/api/session/register" class="btn btn-info">¿No estás registrado? Clickeá acá para hacerlo.</a>
            </div>

        </div>
    </div>

</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>