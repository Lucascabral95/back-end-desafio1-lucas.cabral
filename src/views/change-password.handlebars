<div class="container contenedor-change-password">

    <h4 class="text-center title"> Recuperación de cuenta </h4>

    <div class="container form">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title text-center title-form">Cambio de contraseña.</h3>
                        <p class="text-center"> Tu email es: {{email}} </p>
                        <form action="/changePassword" , method="POST">
                            <div class="form-group">
                                <input type="password" id="emailPass2" class="form-control"
                                    placeholder="Ingrese su nueva contraseña" name="password" required>
                            </div>
                            <div class="form-group">
                                <input type="password" id="emailPass1" class="form-control required"
                                    placeholder="Ingrese nuevamente su nueva contraseña" name="confirmPassword">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block margin-auto">Cambiar
                                contraseña</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>