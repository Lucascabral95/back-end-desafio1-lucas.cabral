<div class="upload-photos">

    {{> headerPrueba}}

    <div class="sub-header">
        <div class="uid">
            <p class="uid-texto"> UID: {{data.[9]}} </p>
        </div>
        <div class="carrito-compras">
            <a href="/carts/{{data.[10]}}/purchase" class="carrito-compras-a">Ir al carrito de compras ðŸ›’ </a>
        </div>
        {{#if data.[11]}}
        <div class="carrito-compras">
            <a class="carrito-compras-a-users" href="/api/users"> Modificar usuarios </a>
        </div>
        {{/if}}
        <div class="photo">
            {{#if data.[0] }}
            <a class="photo-a" href="/api/users/documents">
                <span class="photo-texto"> {{data.[0]}} </span>
                <img class="photo-profile" src="{{data.[3]}}" alt="Foto de perfil">
            </a>
            {{else}}
            <a class="photo-a" href="/api/users/documents">
                <span class="photo-texto"> {{data.[0]}} </span>
                <img class="photo-profile" src="/img/foto-anonima.jpg" alt="Foto de perfil">
            </a>
            {{/if}}
        </div>
    </div>

    <div class="container">

        <h2 class="titlee text-center" style="margin-bottom: 5%;"> Subida de fotos </h2>

        <h2 class="text-center" style="font-weight: bolder; font-size: 2rem">
            Carga de fotos de perfil
        </h2>

        {{#if data.[4]}}
        <h5 class="text-center" style="color: blue">Ultima imagen de perfil subida </h5>
        <div class="imagen-avatar" style="display: flex; justify-content:center">
            <img style="width: 200px; height: auto" src="{{data.[3]}}" alt="Foto de perfil">
        </div>
        {{/if}}

        <div class="form" style="margin: auto; width: 50%">
            <form action="/api/users/documents/profile" enctype="multipart/form-data" method="POST"
                onsubmit="cargarFoto()">
                <div class="form-group">
                    <label style="font-size: 1.6rem; font-weight: 600" for="file">SubÃ­ una foto de perfil</label>
                    <input class="form-control" type="file" name="file" required>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit">
                </div>
            </form>
        </div>

        {{#if data.[4]}}
        <h4 class="text-center" style="font-size: 2.4rem; mt-5 mb-5"> Tabla con los datos de todas las imagenes de
            perfil subidas
        </h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>NÂ° de archivo</th>
                    <th>Nombre del archivo</th>
                    <th>Link a la imagen</th>
                    <th>Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each data.[2]}}
                <tr>
                    <td> {{@index}} </td>
                    <td> {{lookup ../data.[1] @index}} </td>
                    <td> <a href="{{this}}" style="color: red; font-weigth: 800">Link a la foto de perfil</a> </td>
                    <td> <img style="width: 50px; height: 50px" src="{{this}}" alt=""> </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}

        <h2 class="text-center" style="font-weight: bolder; font-size: 2rem; margin-top: 5%">
            Carga de fotos de productos </h2>

        {{#if data.[8] }}
        <h5 class="text-center" style="color: blue">Ultima imagen de producto subida </h5>
        <div class="imagen-avatar" style="display: flex; justify-content:center">
            <img style="width: 200px; height: auto" src="{{data.[7]}}" alt="Foto de perfil">
        </div>
        {{/if}}

        <div class="form2" style="margin: auto; width: 50%">
            <form action="/api/users/documents/products" enctype="multipart/form-data" method="POST"
                onsubmit="cargarFotoProducto()">
                <div class="form-group">
                    <label style="font-size: 1.6rem; font-weight: 600" for="product"> SubÃ­ una foto de un producto
                    </label>
                    <input class="form-control" type="file" name="product" required>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit">
                </div>
            </form>
        </div>

        {{#if data.[8]}}

        <h4 class="text-center" style="font-size: 2.4rem; mt-5 mb-5"> Tabla con los datos de todas las imagenes de
            productos subidas
        </h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>NÂ° de archivo</th>
                    <th>Nombre del archivo</th>
                    <th>Link a la imagen</th>
                    <th>Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each data.[6]}}
                <tr>
                    <td> {{@index}} </td>
                    <td> {{lookup ../data.[4] @index}} </td>
                    <td> <a href="{{this}}" style="color: red; font-weigth: 800">Link a la foto del producto</a> </td>
                    <td> <img style="width: 50px; height: 50px" src="{{this}}" alt=""> </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}

    </div>
</div>

{{> footerPrueba}}