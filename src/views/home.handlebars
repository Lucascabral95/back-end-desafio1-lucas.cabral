<section>

  {{> headerPrueba}}

  <h1 class="text-center mt-4 mb-4 titlee">Lista de todos los productos</h1>

  <p style="text-align: center">*Vista desde <span style="font-weight: bolder">home.handlebars.</span>* <span
      style="font-weight: bolder; color:red">No se actualiza en tiempo real.</span></p>
  <p style="text-align: center">*Productos le√≠dos desde productos.json.*</p>

  <div class="container">

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Code</th>
          <th scope="col">Price</th>
          <th scope="col">Stock</th>
          <th scope="col">Category</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.code}}</td>
          <td>{{this.price}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.category}}</td>
          <td>{{this.status}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>

</section>

{{> footerPrueba}}

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
